<%- include("../partials/header.ejs") %>


<% for (let cluck of clucks) { %>
<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="/image/user.png" class="img-fluid rounded-start" alt="user" width="50"
      height="50">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title"><%- cluck.username %></h3>
        <p class="card-text"><small class="text-muted"><%- cluck.createdAt %></small></p>
        <p class="card-text"><%- cluck.content %></p>
        <%if (cluck.imageUrl) { %>
          <img
            src="<%- cluck.imageUrl %>"
            class="rounded"
            width="200"
            height="100"
          />
          <% } %>
      </div>
    </div>
  </div>
</div>
<% } %>
<%- include("../partials/footer.ejs") %>



